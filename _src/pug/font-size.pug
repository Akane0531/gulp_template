doctype html

include base/_config

html(lang="ja")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		- // meta(name="robots", content="noindex,nofollow")
		meta(name="format-detection", content="telephone=no, address=no, email=no")
		link(href= paths.css + "reset.min.css", rel="stylesheet")
		title WEBサイトにおける適切なフォントサイズについての考察
		
		style.
			body > *+*{
				margin-top: 16px;
			}
			.font-size>p:nth-of-type(1){
				font-size: 10px;
			}
			.font-size>p:nth-of-type(2){
				font-size: 12px;
			}
			.font-size>p:nth-of-type(3){
				font-size: 14px;
			}
			.font-size>p:nth-of-type(4){
				font-size: 16px;
			}
			.font-size>p:nth-of-type(5){
				font-size: 18px;
			}
			.font-size>p:nth-of-type(6){
				font-size: 24px;
			}
			.spacing{
				line-height: 1.6;
				letter-spacing: .1em;
			}

		body
			h1 WEBサイトにおける適切なフォントサイズについての考察
			h2 字間・行間0
			div.font-size
